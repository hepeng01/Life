
page {
	width: 100%;
	min-height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.tabs {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	overflow: hidden;
	background-color: #fafafa;
}
.scroll-h {
	width: 750rpx;
	height: 80rpx;
	background-color: #ffffff;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;

	white-space: nowrap;
}
.tab-item {

	display: inline-block;

	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
	padding-left: 34rpx;
	padding-right: 34rpx;
}
.tab-item-title {
	color: #555;
	font-size: 30rpx;
	height: 80rpx;
	line-height: 80rpx;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;

	white-space: nowrap;
}
.tab-item-title-active {
	color: #65D728;
	font-size: 36rpx;
	font-weight: bold;
